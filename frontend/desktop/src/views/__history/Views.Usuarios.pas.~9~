unit Views.Usuarios;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Views.Base.Cadastro, Data.DB, Vcl.Grids,
  Vcl.DBGrids, Vcl.Buttons, Vcl.ExtCtrls, Vcl.WinXPanels, Vcl.StdCtrls, Services.Usuarios,
  Vcl.DBCtrls, Vcl.Mask;

type
  TFrmUsuarios = class(TFrmBaseCadastro)
    lblCodigo: TLabel;
    edtCodigo: TDBEdit;
    lblNome: TLabel;
    edtNome: TDBEdit;
    lblValor: TLabel;
    lblEstoque: TLabel;
    edtTelefone: TDBEdit;
    ckbStatus: TDBCheckBox;
    Label1: TLabel;
    edtLogin: TDBEdit;
    edtSexo: TDBComboBox;
    lblSenha: TLabel;
    edtSenha: TDBEdit;
    lblPesquisaCodigo: TLabel;
    edtPesquisaCodigo: TEdit;
    lblPesquisaNome: TLabel;
    edtPesquisaNome: TEdit;
    procedure FormCreate(Sender: TObject);
//    procedure FormShow(Sender: TObject);
//    procedure dsCadastroDataChange(Sender: TObject; Field: TField);
  protected
    procedure DoBeforeList; override;
  end;

implementation

{$R *.dfm}

procedure TFrmUsuarios.DoBeforeList;
begin
  inherited;
  FService.Request
    .ClearParams
    .AddParam('id', edtPesquisaCodigo.Text)
    .AddParam('nome', edtPesquisaNome.Text);
end;

